<!-- TABLE OBJETS -->
 
  <table name="objets" description="objets">
  	<column
      name="nom"
      required="true"
      primaryKey="true"
      type="VARCHAR"
      size="40"
      description="Nom de lobjet"/>
    <column
      name="points"
      required="true"
      type="INTEGER"
      default="0"
      description="points de gain"/>
    <column
      name="carac"
      required="true"
      type="VARCHAR"
      size="60"
      default="0"
      description="caracteritique améliorée"/>
    <column
      name="duree"
      required="true"
      type="INTEGER"
      default="0"
      description="nombre de tour valable"/>
    <column
      name="type"
      required="true"
      type="VARCHAR"
      size="40"
      description="ataque ou defense"/>
    <foreign-key foreignTable="caracteristiques">
      <reference
        local="carac"
        foreign="nom"/>
    </foreign-key>
    <foreign-key foreignTable="types">
      <reference
        local="type"
        foreign="nom"/>
    </foreign-key>
  </table>
  
